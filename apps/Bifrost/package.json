{
  "name": "@turnly/bifrost",
  "version": "1.0.0",
  "private": true,
  "description": "It's the real-time event bridge that sends data between internal services and applications.",
  "license": "UNLICENSED",
  "author": {
    "name": "Efra",
    "email": "efra23peralta@gmail.com",
    "url": "https://github.com/efraa"
  },
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "tsc",
    "lint:check": "eslint . --ext .js,.ts",
    "lint:format": "prettier \"./**/*.{ts,js}\" --check",
    "lint:ts:check": "tsc --noEmit",
    "start": "ROOT_DIR=$(pwd) NODE_PATH=dist/ node -r dotenv/config dist/main.js",
    "test": "jest --forceExit --detectOpenHandles",
    "watch": "nodemon --config node_modules/@turnly/eslint-config/nodemon.json src/main.ts"
  },
  "prettier": "@turnly/eslint-config/.prettierrc.js",
  "eslintConfig": {
    "extends": "@turnly/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "**/*.md",
      "dist",
      "jest*",
      "tests/**/*.ts"
    ]
  },
  "dependencies": {
    "@turnly/eslint-config": "git+https://turnlyapps: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@github.com/turnly/configs.git",
    "@turnly/realtime": "git+https://turnlyapps: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@github.com/turnly/realtime.git#latest",
    "@turnly/rpc": "git+https://turnlyapps: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@github.com/turnly/rpc.git#latest",
    "@turnly/common": "git+https://turnlyapps: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@github.com/turnly/common.git#latest",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^17.0.30",
    "eslint": "^8.14.0",
    "jest": "^28.0.3",
    "nodemon": "^2.0.14",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=16.15.0"
  }
}
