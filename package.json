{
  "name": "@turnly/turnly",
  "version": "1.0.0",
  "private": true,
  "description": "Queue management system for waiting lines & walk-ins at physical locations.",
  "workspaces": {
    "packages": [
      "apps/*"
    ],
    "nohoist": [
      "**"
    ]
  },
  "scripts": {
    "devo": "bash ./.devo/devo.sh",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@turnly/eslint-config/commits/commitlint.js"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@turnly/eslint-config": "https://github.com/turnly/configs.git",
    "husky": "^8.0.1"
  },
  "engines": {
    "node": ">=16.15.0"
  }
}
